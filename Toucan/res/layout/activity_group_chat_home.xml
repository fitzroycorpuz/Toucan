<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent" android:layout_height="match_parent"
android:orientation="vertical">
	<LinearLayout android:id="@+id/lnBroadcast"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/toucan_green"
	android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:layout_centerInParent="true" android:orientation="vertical">
			<ImageView android:id="@+id/img_megaphoneMini"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerInParent="true" android:paddingTop="50dp"
			android:paddingBottom="10dp" android:scaleType="center" 
			android:src="@drawable/btn_megaphone"
			/>
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:padding="5dp" android:text="Start Broadcasting To Your Area"
			android:textColor="@color/white_smoke"
			android:textSize="18dp" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/lnBroadcastMini"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/toucan_green"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:weightSum="7" android:orientation="horizontal"  android:padding="5dp">
		
		    <Button
			    android:id="@+id/btnOptions"
			    android:layout_width="wrap_content"
 				android:layout_weight="5"
 				android:paddingTop="-50dp"
			    android:scaleType="center"
			    android:background="@drawable/radiused_button"
			    android:text="Broadcast Options"
			    android:textColor="@color/white_smoke"
			    android:layout_height="30dp"
				android:layout_centerHorizontal="true" 
			   />
		    
		    <TextView		   
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
 				android:layout_weight="1"
			     />
			<ImageView
			    android:id="@+id/img_megaphone"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_centerInParent="true"
			 
			     android:layout_weight="0"
			    android:padding="5dp"
			    android:scaleType="center"
			    android:background="@drawable/btn_megaphone" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		 android:orientation="horizontal" android:background="@color/PUMICE" >
		<TextView
    			android:id="@+id/txt_broad_stat"
    			android:layout_width="0dp"
			    android:layout_height="wrap_content" android:gravity="center" 
				android:text="Connecting To Toucan ..." android:textColor="@color/asbestos"
 				android:layout_weight="1"  android:padding="1dp"/>
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/lnBroadcastEmpty"
	android:layout_width="fill_parent" android:layout_height="match_parent"
	android:gravity="bottom" android:orientation="vertical">
		<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:background="@color/soft_sky">
			  <FrameLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentBottom="true">-->
				<ImageView android:id="@+id/rotator_disp"
				android:layout_width="1139dp" android:layout_height="262dp"
				android:background="@drawable/img_building"
				/>
				<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="80dp" android:paddingLeft="45dp"
				android:fontFamily="sans-serif-medium"
				android:paddingRight="45dp" android:text="Broadcasts allow you to send messages to anyone nearby."
				android:textAllCaps="true" android:textColor="@color/white"
				android:textSize="20dp" />
			</FrameLayout>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/lnBroadcastExist"
	android:layout_width="fill_parent" android:layout_height="match_parent"
	android:gravity="bottom" android:orientation="vertical">
		<ListView android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:id="@+id/listview" 
		tools:context=".GroupChatHomeActivity"
		android:dividerHeight="10.0sp"  android:animateLayoutChanges="true"
		/>
	</LinearLayout>
</LinearLayout>