<?xml version="1.0"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    app:inner_parallax_factor="3" 
    app:parallax_factor="2" 
    app:parallax_views_num="2" 
    tools:context=".MainActivity">
            
    <LinearLayout android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical">
        <RelativeLayout android:id="@+id/linearLayout1" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/white" 
            android:gravity="center" 
            android:layout_marginTop="-30dp" 
            android:paddingBottom="30dp" 
            android:paddingTop="60dp" 
            tools:ignore="HardcodedText">
            
            <View android:id="@+id/innerPic" 
                android:layout_width="200dip" 
                android:layout_height="200dip" 
                android:layout_marginBottom="5dip"
        		android:layout_marginTop="5dip"
        		android:background="@drawable/circle" 
                android:orientation="vertical"/>
            
            <ImageView android:id="@+id/img_profile" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:padding="12dip"
		    android:layout_alignTop="@id/innerPic"
         	android:layout_alignBottom="@id/innerPic"
         	android:layout_alignLeft="@id/innerPic"
         	android:layout_alignRight="@id/innerPic"            
         	android:scaleType="fitXY"
		    />
        </RelativeLayout>
        
        <TextView android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="@android:color/white"/>
        
        <LinearLayout android:id="@+id/linearLayout2" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/flat_white" 
            android:gravity="center" 
            android:padding="20dp" 
            
            android:orientation="vertical">
            
            <TextView android:id="@+id/txtStat" android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text=""
                android:textSize="22dp" 
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:textColor="@color/old_black" 
                android:padding="20dp" 
                android:paddingBottom="50dp"/>
            
            <Button android:id="@+id/btnStatus" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:text="Change" 
                android:textSize="15dp" 
                android:textAllCaps="true" 
                android:background="@color/toucan_green" 
                android:textColor="@color/flat_white"
                android:layout_marginLeft="30dp" 
                android:layout_marginRight="30dp" 
                android:paddingLeft="20dp" 
                android:paddingRight="20dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="@android:color/white"/>
        
        <LinearLayout android:id="@+id/ln_personal" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/flat_white" 
            android:padding="20dp" 
           
            android:orientation="horizontal">
            
            <TextView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Personal Details" 
                android:textSize="18dp" 
                android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:textAllCaps="true" 
                android:textColor="@color/old_black"/>
            
            <View android:layout_width="0dp" 
                android:layout_height="0dp" 
                android:layout_weight="1"/>
            
            <Button android:layout_width="30dp" 
                android:layout_height="30dp" 
                android:background="@drawable/btn_item"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="@android:color/white"/>
        
        <LinearLayout android:id="@+id/ln_photos" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/flat_white" 
            android:padding="20dp" 
           
            android:orientation="horizontal">
            
            <TextView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Photos" 
                android:textSize="18dp" 
                android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:textAllCaps="true" 
                android:textColor="@color/old_black"/>
            
            <View android:layout_width="0dp" 
                android:layout_height="0dp" 
                android:layout_weight="1"/>
            
            <Button android:layout_width="30dp" 
                android:layout_height="30dp" 
                android:background="@drawable/btn_item"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="@android:color/white"/>
       
        <LinearLayout android:id="@+id/ln_preference" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/flat_white" 
            android:padding="20dp" 
          
            android:orientation="horizontal">
            
            <TextView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/preferences" 
                android:textSize="18dp" 
                android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:textAllCaps="true" 
                android:textColor="@color/old_black"/>
            
            <View android:layout_width="0dp" 
                android:layout_height="0dp" 
                android:layout_weight="1"/>
            
            <Button android:layout_width="30dp" 
                android:layout_height="30dp" 
                android:background="@drawable/btn_item"/>
        
        </LinearLayout>
        
        <TextView android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="@android:color/white"/>
        
        <LinearLayout android:id="@+id/ln_distance" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/flat_white" 
            android:padding="20dp" 
             tools:ignore="HardcodedText"
            android:orientation="horizontal">
            
            <TextView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Distance Settings" 
                android:textSize="18dp" 
                android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:textAllCaps="true" 
                android:textColor="@color/old_black"/>
            
            <View android:layout_width="0dp" 
                android:layout_height="0dp" 
                android:layout_weight="1"/>
            
            <Button android:layout_width="30dp" 
                android:layout_height="30dp" 
                android:background="@drawable/btn_item"/>
            
        </LinearLayout>
        <TextView android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="@android:color/white"/>
        
        <LinearLayout android:id="@+id/ln_settings" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@color/flat_white" 
            android:padding="20dp" 
             tools:ignore="HardcodedText"
            android:orientation="horizontal">
            
            <TextView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Privacy and account" 
                android:textSize="18dp" 
                android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:textAllCaps="true" 
                android:textColor="@color/old_black"/>
            
            <View android:layout_width="0dp" 
                android:layout_height="0dp" 
                android:layout_weight="1"/>
            
            <Button android:layout_width="30dp" 
                android:layout_height="30dp" 
                android:background="@drawable/btn_item"/>
            
        </LinearLayout>
        
        <TextView android:layout_width="match_parent" 
            android:layout_height="30dp" 
           />
        
         <ImageView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
      			android:layout_gravity="center" 
                android:gravity="center_vertical|center" 
                android:src="@drawable/pic_toucan" 
                 
                 
                />
         
           <TextView android:layout_width="match_parent" 
            android:layout_height="5dp" 
           />
       
      	
    </LinearLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>