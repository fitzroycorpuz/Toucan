<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent" android:layout_height="match_parent"
android:orientation="vertical">

	<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/toucan_green"
	android:padding="15dp">

		<TextView  android:layout_width="200dp" android:layout_height="match_parent"
		android:text="@string/strBroad" android:textSize="18dp"
		android:textAllCaps="true" android:textColor="@color/white"
		/>

		<View android:layout_width="0dp" android:layout_height="0dp"
		android:layout_weight="1" />

		<Button android:id="@+id/dialogButtonOK"
		android:layout_width="30dp" android:layout_height="30dp"
		android:background="@drawable/btn_ok" />

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="vertical"
	android:background="@color/white" android:padding="10dp">

		<LinearLayout android:id="@+id/looking_for"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:layout_height="wrap_content" tools:ignore="HardcodedText"
		android:background="@color/flat_white">

		   <TextView android:id="@+id/txtCharLeft" android:layout_width="wrap_content" android:layout_height="match_parent"
			android:text="150" android:textSize="16dp"
			android:textAllCaps="true" android:textColor="@color/old_black"
			android:gravity="right"
			android:paddingTop="5dp"
			android:orientation="horizontal"
    		android:layout_gravity="right"
			android:paddingRight="10dp"
			/>
			<EditText android:id="@+id/edtStatus" android:background="@color/white_smoke"
			android:hint="@string/stathint" 
			android:inputType="textMultiLine"
			android:gravity="top"
			android:lines="5"
			android:maxLength="150"
			android:singleLine="true" android:textColor="@color/old_black"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight ="10dp"
			android:layout_marginBottom ="10dp"
			android:padding ="10dp" />

			<Button android:id="@+id/dialogButtonCancel"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="@string/updateStat" android:background="@color/toucan_green"
			android:textAllCaps="true" android:textColor="@color/flat_white"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp" />

		</LinearLayout>

		<TextView android:layout_width="match_parent"
		android:layout_height="15dp" android:background="@android:color/white"
		/>

	</LinearLayout>
</LinearLayout>